upstream torwuf_frontends {
	server 127.0.0.1:8798;
}

upstream redmine_torwuf {
	server unix:/tmp/redmine-torwuf-fcgi.socket;
}

upstream gitlab_torwuf {
	server unix:/home/gitlab/gitlab/tmp/sockets/gitlab.socket;
}

upstream compfacts_server {
	server 127.0.0.1:8796;
}

server {
	listen 80;
	listen 443 ssl;
	server_name torwuf.com;
	ssl_certificate /etc/torwuf/server.crt;
	ssl_certificate_key /etc/torwuf/server.key;
	return 301 $scheme://www.torwuf.com$request_uri;
}

server {
	listen 80;
	listen 443 ssl;
	server_name www.torwuf.com;
	ssl_certificate /etc/torwuf/server.crt;
	ssl_certificate_key /etc/torwuf/server.key;
	
	client_max_body_size 50M;
	
	location / {
		index  index.html index.htm;
		try_files $uri $uri/ @torwuf;
	}
	
	location @torwuf {
		proxy_next_upstream error;
		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_redirect off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;
		proxy_pass http://torwuf_frontends;
	}
	
	location /uploads/ {
		internal;
		root /home/www-torwuf/torwuf-service/databases;
	}
	
	location /z/ {
		alias /home/www-torwuf/torwuf-service/www/z/;
		autoindex  on;
		autoindex_exact_size off;

		location ~ "^/z/kitabyte/.*woff$" {
			add_header Access-Control-Allow-Origin *;
		}
	}
	
	location /z/r {
		alias /opt/torwuf/share/www/static/;
	}
	
	location /compfacts {
		try_files $uri @compfacts;
	}
	
	location @compfacts {
		proxy_next_upstream error;
		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_redirect off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;
		proxy_pass http://compfacts_server;
	}
	
	location /redmine {
		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_redirect off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;
        alias      /usr/share/redmine/public;
        try_files $uri @fcgi;
    }
    
	location /gitlab {
		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_redirect off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;

		# serve static files from defined root folder;.
		# @gitlab is a named location for the upstream fallback, see below
		try_files $uri $uri/index.html $uri.html @gitlab;
	}
    
    location @fcgi {
        include /etc/nginx/fastcgi_params;
        fastcgi_param   SCRIPT_FILENAME /usr/share/redmine/public/$fastcgi_script_name;
        fastcgi_pass    redmine_torwuf;
        fastcgi_index   index.html;
    }
    
	# if a file, which is not found in the root folder is requested,
	# then the proxy pass the request to the upsteam (gitlab unicorn)
	location @gitlab {
		proxy_read_timeout 300; # https://github.com/gitlabhq/gitlabhq/issues/694
		proxy_connect_timeout 300; # https://github.com/gitlabhq/gitlabhq/issues/694
		proxy_redirect     off;

		proxy_set_header   X-Forwarded-Proto $scheme;
		proxy_set_header   Host              $http_host;
		proxy_set_header   X-Real-IP         $remote_addr;

		proxy_pass http://gitlab_torwuf;
	}
}
